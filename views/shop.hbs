{{> nav }}
<section>
    <header>
        <div class="text-center">
            <h1>Image Gallery</h1>
            <p>Hover on an item card to review its price. Click on the card to see more details about the product.
                <br> Use the cart icon to add the item to cart.
            </p>
        </div>
    </header>
    <section class="container">
        <br>
        <div class="row align-items-center">
            <div class="col text-center">
                <div class="new_arrivals_sorting">
                    <ul class="arrivals_grid_sorting clearfix button-group filters-button-group">
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center align-items-center active is-checked"
                            data-filter="*">all</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center
                            align-items-center" data-filter=".women">women's</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center
                            align-items-center" data-filter=".accessories">accessories</li>
                        <li class="grid_sorting_button button d-flex flex-column justify-content-center
                            align-items-center" data-filter=".men">men's</li>
                    </ul>
                </div>
            </div>
        </div>

        <br>
        <ul class="gallery">
            {{#if products }}
            {{#each products }}
            <li class="item"><img class="grid-item" src="/uploads/{{this.image}}">
                <div class="overlay" onclick="redirect(event)">
                    <div class="text-center">
                        <p>{{this.name}}</p>
                        <br>
                        <p class="price">{{this.price}}</p>
                        <a href="#"><i class="fas fa-cart-plus"></i></a>
                    </div>
                </div>
            </li>
            {{/each}}
            {{/if}}
        </ul>
    </section>
</section>

{{> footer }}
<script>
    function redirect(e) {
        console.log(e.target)
    }
</script>
<style>
    .overlay {
        position: relative;
        background-color: #0000007d;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 190px;
        margin-top: -205px;
        margin-right: 15px;
        margin-left: 15px;
        visibility: hidden;
        cursor: pointer;
        transform-origin: center center;
        padding: 5px;
    }

    .overlay i {
        position: absolute;
        bottom: 10px;
        right: 10px;
        color: white;
        font-size: 18px !important;
    }

    .overlay .text-center {
        color: white;
    }

    .item:hover>div.overlay {
        visibility: visible;
    }

    .item img {
        transition: transform .3s ease;
    }

    .item:hover img {
        transform: scale(0.95);
    }

    ul.gallery {
        display: flex;
        flex-wrap: wrap;
    }

    ul.gallery li {
        height: 220px;
        flex-grow: 1;
        margin: 5px;
    }

    .price {
        color: white;
        border-radius: 5px;
        background: red;
        padding: 2px;
    }

    .grid-item {
        max-height: 100%;
        min-width: 100%;
        object-fit: cover;
        vertical-align: bottom;
    }

    header {
        height: 40vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #42586e;
        color: #fff;
        padding-top: 50px
    }

    hr.style-eight {
        overflow: visible;
        /* For IE */
        height: 30px;
        border-style: solid;
        border-color: white;
        border-width: 1px 0 0 0;
        border-radius: 20px;

    }

    hr.style-eight:before {
        /* Not really supposed to work, but does */
        display: block;
        content: "";
        height: 30px;
        margin-top: -31px;
        border-style: solid;
        border-color: white;
        border-width: 0 0 1px 0;
        border-radius: 20px;
    }

    h1 {
        letter-spacing: 4px;
        font-size: 40px !important;
    }
</style>