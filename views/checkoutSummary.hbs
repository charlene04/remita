            customerId: `${id}`,
            firstName: "Lisa",
            lastName: "Spark",
            email: "demo@remita.net",
            narration: "Payment Description",
            amount: tot1,
            onSuccess: function (response) {
                $.ajax({
                    url: `/my-cart/${id}?_method=PUT`,
                    dataType: "json",
                    type: "POST",
                    data: {
                        paymentStatus: true
                    },
                    success: function (data) {
                        document.getElementById("popup").style.display = 'flex'
                    },
                    error: function () {
