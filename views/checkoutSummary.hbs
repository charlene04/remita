                <div id="section2">

                    <form method="POST" enctype="application/json" class="container"
                        action="/carts/{{cart._id}}?_method=PATCH">
                        <h1>Contact Information</h1>

                        <p><i class="fas fa-exclamation-circle"></i>
                            Kindly note that you are responsible for the cost of delivery</p>
                        <br>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <input name="firstName" type="text" class="form-control" placeholder="Jon">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <input name="lastName" type="text" class="form-control" placeholder="Doe">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <input name="email" type="email" class="form-control"
                                        placeholder="jondoe@gmail.com">
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <input name="phone" pattern="[0-9]{11}" type="tel" class="form-control"
                                        placeholder="08121239090">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <textarea name="address" class="w-100" rows="2"
                                placeholder="Provide a valid delivery address" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col-md-5" id="checkout">
                <section class="container">
                    <div id="paymentImage"></div>
                    <hr>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Apply coupon code"
                            style="border: 1px solid #00000045;" aria-label="Apply coupon code"
                            aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button">Apply</button>
                        </div>
                    </div>
                    <hr>
                    <div class="openbtw">
                        <p class="flex-start">Subtotal:</p>
                        <p class="flex-end">&#8358; 300000</p>
                    </div>
                    <div class="openbtw">
                        <p class="flex-start">Discount:</p>
                        <p class="flex-end">&#8358; 3000</p>
                    </div>
                    <hr class="m-0">
                    <br>
                    <div class="openbtw container">
                        <h1 class="flex-start">TOTAL</h1>
                        <h1 class="flex-end"> &#8358; 40000</h1>
                    </div>
                </section>
                <br><br><br>
                <div class="text-center">
                    <button type="button" class="btn btn-primary btn-lg" id="btncheckout"
                        onclick="makePayment()">CHECKOUT</button>
                </div>
            </div>
        </div>

    </div>
</section>
